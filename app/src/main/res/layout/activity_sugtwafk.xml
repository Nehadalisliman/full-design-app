<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sugtwafk">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"

        >


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:foreground="@drawable/topblkrec"  />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="160dp"
            android:text="اقترح توافق"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="35dp"
            android:foreground="@drawable/back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="310dp"
                android:layout_marginRight="20dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView4"
                    android:layout_width="340dp"
                    android:layout_height="65dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:background="@drawable/emptycircle"
                    android:textSize="22sp"
                    android:text="التوافق" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="400dp"
                android:layout_marginRight="20dp"


                >

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView5"
                    android:layout_width="340dp"
                    android:layout_height="140dp"
                    android:background="@drawable/emptycircle"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:textSize="22sp"
                    android:text="ملاحظات"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="20dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView6"
                    android:layout_width="340dp"
                    android:layout_height="65dp"
                    android:drawableLeft="@drawable/bk"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:background="@drawable/emptycircle"
                    android:textSize="22sp"
                    android:text="اختر المودل" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView7"
                    android:layout_width="340dp"
                    android:layout_height="65dp"
                    android:drawableLeft="@drawable/bk"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:background="@drawable/emptycircle"
                    android:textSize="22sp"
                    android:text="اختر الصنف" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="130dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView8"
                    android:layout_width="340dp"
                    android:layout_height="65dp"
                    android:drawableLeft="@drawable/bk"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:background="@drawable/emptycircle"
                    android:textSize="22sp"
                    android:text="اختر الماركة" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="600dp"
                android:background="@drawable/rectang"
                android:text="ارسال الاقتراح"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"

                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>