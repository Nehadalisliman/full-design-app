<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".numbersthmk">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"

        >


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:foreground="@drawable/topblkrec"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="ارقام تهمك"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="35dp"
            android:foreground="@drawable/back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <GridLayout
                android:layout_width="385dp"
                android:layout_height="571dp"
                android:layout_centerHorizontal="true"
                android:columnCount="2"
                android:foregroundGravity="center"
                android:rowCount="2">>


                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/screen"
                        />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="140dp"
                        android:foreground="@drawable/gree"
                        />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="143dp"
                        android:text="فودافون"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/screen" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="140dp"
                        android:foreground="@drawable/gree"
                        />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="143dp"
                        android:text="اورانج"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/screen" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="140dp"
                        android:foreground="@drawable/gree"
                        />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="143dp"
                        android:text="اوانج"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </GridLayout>


        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>