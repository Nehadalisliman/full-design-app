<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:foreground="@drawable/topblkrec" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="160dp"
            android:text="ماركه"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="35dp"
            android:foreground="@drawable/back"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
       >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:layout_marginHorizontal="30dp"

            android:rowCount="10">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="340dp"
                android:layout_height="65dp"
                android:drawableLeft="@drawable/realme"
                android:padding="20dp"
                android:text="اختر الماركة"
                android:background="@drawable/emptycircle"
                android:textSize="22sp"


                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="340dp"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/emptycircle"
                android:drawableLeft="@drawable/realme"
                android:padding="20dp"
                android:text="اختر المودل"
                android:textSize="22sp"
                />
        </GridLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/rectang"
            android:text="بحث"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"

            />
        <GridLayout
            android:layout_width="385dp"
            android:layout_height="600dp"
            android:layout_centerHorizontal="true"
            android:columnCount="2"
            android:foregroundGravity="center"
            android:layout_marginTop="250dp"
            android:rowCount="2">


            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:foreground="@drawable/screen"
                    />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="175dp"
                    android:foreground="@drawable/gree"
                     />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:text="A15"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="210dp"
                    android:text="Status: Available."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:foreground="@drawable/screen"
                    />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="175dp"
                    android:foreground="@drawable/gree"
                     />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:text="A15"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="210dp"
                    android:text="Status: Available."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:foreground="@drawable/screen"
                    />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="175dp"
                    android:foreground="@drawable/gree"
                     />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:text="A15"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="210dp"
                    android:text="Status: Available."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>




        </GridLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>