<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splatwo">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:foreground="@drawable/onboarding_image"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayoutee"
        android:layout_width="0dp"
        android:layout_height="751dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="163dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="420dp"
            android:text="يحتوي التطبيق على توافقات باغة - تاتش - شاشات - اسكرينات - جرابات - بطاريات - IC - منفذ الشحن - بصمات - فلاتة شحن"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="866dp"
        android:contextClickable="true"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btnnexttwo"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="750dp"
            android:background="@drawable/roundedbutton"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="DuplicateIds" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>